<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeuroDesarrolloMusical" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/lightgrey</item>
        <!-- Secondary brand color.-->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/lightgrey</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/lightgrey</item>
        <item name="android:textColorHint">@color/lightgrey</item>
        <item name="android:textColorPrimary">@color/lightgrey</item>
        <item name="android:background">@color/darkgrey</item>
    </style>

    <style name="Theme.NeuroDesarrolloMusicalBlue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/lightblue</item>
        <!-- Secondary brand color.-->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/lightblue</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/lightblue</item>
        <item name="android:textColorHint">@color/lightblue</item>
        <item name="android:textColorPrimary">@color/lightblue</item>
        <item name="android:background">@color/darkblue</item>
    </style>

    <style name="Theme.NeuroDesarrolloMusicalTeal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/lightteal</item>
        <!-- Secondary brand color.-->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/lightteal</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/lightteal</item>
        <item name="android:textColorHint">@color/lightteal</item>
        <item name="android:textColorPrimary">@color/lightteal</item>
        <item name="android:background">@color/darkteal</item>
    </style>

    <style name="Theme.NeuroDesarrolloMusical.NoActionBar" parent="Theme.NeuroDesarrolloMusicalTeal">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NeuroDesarrolloMusical.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NeuroDesarrolloMusical.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>