<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    tools:context=".PlayerActivity">

    <TextView
        android:id="@+id/playerTextViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Player"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/playerTextViewAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerTextViewTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0sp"
        android:text="...Autor..."
        android:textSize="14dp"
        android:textStyle="italic"
        android:visibility="gone" />

    <TextView
        android:id="@+id/playerTextViewInterprete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerTextViewAutor"
        android:layout_centerHorizontal="true"
        android:text="...Interprete..."
        android:textSize="14dp"
        android:textStyle="italic"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/playerScrollLetra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/playerLayoutProgreso"
        android:layout_below="@id/playerTextViewInterprete"
        android:layout_marginTop="20sp">

        <TextView
            android:id="@+id/playerTextViewLetra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingMultiplier="1.2"
            android:padding="10sp"
            android:text="Letra..."
            android:textSize="25dp" />
    </ScrollView>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/playerLayoutProgreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/playerImageViewPlayControl">
        
        <ImageView
            android:id="@+id/playerLayoutProgreso1"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_play_progreso"/>
        <ImageView
            android:id="@+id/playerLayoutProgreso2"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_play_progreso"/>
        <ImageView
            android:id="@+id/playerLayoutProgreso3"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_play_progreso"/>
        <ImageView
            android:id="@+id/playerLayoutProgreso4"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_play_progreso"/>
    </LinearLayout>

    <TextView
        android:id="@+id/playerTextViewTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/playerImageViewPrevControl"
        android:layout_marginBottom="15dp"
        android:text="01:00"
        android:textSize="20sp"
        android:layout_marginRight="5sp"/>

    <ImageButton
        android:id="@+id/playerImageViewPlayControl"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="1sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/ic_pause_control" />

    <ImageButton
        android:id="@+id/playerImageViewNextControl"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/playerImageViewPlayControl"
        android:background="@drawable/ic_next_control" />

    <ImageButton
        android:id="@+id/playerImageViewPrevControl"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/playerImageViewPlayControl"
        android:background="@drawable/ic_previous_control" />

    <ImageView
        android:id="@+id/playerImageViewFavorita"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/playerImageViewNextControl"
        android:src="@drawable/ic_cancion_no_favorita" />
</RelativeLayout>